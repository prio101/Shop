<div class="flex flex-1 flex-col min-h-screen justify-center items-center bg-indigo-400">  
  <%= render partial: 'header' %>
  <div class="flex flex-col justify-center py-10 px-10 bg-white rounded-lg">
    <%= form_tag authentication_sessions_path do %>
        <div class="flex items-center justify-center py-4">
          <%= label_tag :username, nil, class: 'px-2 text-base text-gray-600 font-semibold ' %>
          <%= text_field_tag :username, nil, placeholder: "Username", class: 'px-2 py-2 text-base text-gray-600 font-semibold rounded-md border' %>
        </div>

        <div class="flex items-center justify-center py-4">
          <%= label_tag :password, nil, class: 'px-2 text-base text-gray-600 font-semibold ' %>
          <%= password_field_tag :password, nil, placeholder: "******", class: 'px-2 py-2 text-base text-gray-600 font-semibold rounded-md' %>
        </div>

        <div class="flex flex-1 justify-center items-end">
          <%= submit_tag "Log In", class: "cursor-pointer bg-indigo-400 hover:bg-white hover:text-indigo-400 border hover:border-indigo-400 text-white font-semibold px-2 py-2 rounded-md" %>
        </div>
        
        <div class="flex flex-1 justify-center items-end py-4">
          Or <%= link_to "Sign Up", authentication_signup_path,  class: "cursor-pointer px-2 hover:text-indigo-400  text-gray-900 font-semibold rounded-md" %> Here
        </div>
    <% end %>  
  </div>
</div>
