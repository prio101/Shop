<div class="flex flex-1 items-center justify-center">
  <div class="flex flex-1 flex-col items-center justify-center">
    <div class="text-gray-600 text-2xl font-semibold">Orders of the <%= current_user.username %></div>  

    <div class="container mx-auto px-4 sm:px-8">
    <div class="py-8">
        <div>
            <h2 class="text-2xl font-semibold leading-tight">Orders</h2>
        </div>
        <div class="flex flex-col">
          list of ordered items:
          <% CartItem.where(order_id: Order.last.id).each do |item| %>
            <div class="flex text-gray-800 font-bold">Name: <%= item.product.title %></div>
            <div class="flex text-gray-800 font-bold">Price: <%= number_to_currency(item.price) %></div>
          <% end %>
        </div>
    </div>
</div>
  </div>
</div>