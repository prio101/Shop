<div class="flex flex-1 p-20">
  <div class="flex flex-col px-10 py-20 border border-gray-200 shadow-lg rounded-lg">
    <% @products.each do |product| %>
      <div class="flex flex-1">
        Title:       
        <%= product.title %>
      </div>
      <div class="flex">
        Description: 
        <%= product.description %>
      </div>
      <div class="flex flex-1 m-2">
        <%= link_to 'Add to Cart', '', class: 'bg-indigo-400 text-white p-2 rounded-md'%>
        
      </div>
      <div class="flex flex-1 m-2">
        <% if current_user.role.admin? %>
          <%= link_to 'Edit Product', edit_product_path(product), class: 'bg-indigo-400 text-white p-2 rounded-md'%>
        <% end %>
      </div>
    <% end %>
  </div>
</div>